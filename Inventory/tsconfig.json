{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es5",
    "sourceMap": true,
    "noImplicitAny": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "outDir": "dist",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true // permite exportaciones por defecto
  },
  "exclude": ["node_modules", "src/**/*.test.ts"],
  "include": ["src/**/*"]
}
